<h3>Welcome!</h3>

<p>This is the Postit template. You've access the PostsController, index action. This is the index template. Find me under app/views/posts folder.</p>

<div>
<% @posts.each do |post| %>
	<div>

		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
				<i class="icon-arrow-up"></i>
			<% end %>
		<% end %>
		
		<span id='post_<%= post.id %>_votes'><%= post.total_votes %> votes</span>

		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
				<i class="icon-arrow-down"></i>
			<% end %>
		<% end %>
		
	
		<span><%= link_to post.title, post_path(post) %> (<%= link_to 'edit', edit_post_path(post) %>)</span>

	</div>
<% end %>
</div>

<%= link_to 'New Post', new_post_path %>